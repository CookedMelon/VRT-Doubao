<Window x:Class="VRTDoubao.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        Title="VRT Doubao" Height="900" Width="1600" ResizeMode="CanResize" MinWidth="1200" MinHeight="720">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧：顶部横向控制条 + 下方镜像区 -->
        <Grid Grid.Column="0" Margin="8,8,4,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- 顶部：左侧竖向板块（仅窗口句柄相关） -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                <StackPanel Orientation="Vertical" Margin="0,0,0,8">
                    <!-- 窗口句柄 -->
                    <TextBlock Text="窗口句柄" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="左HWND:" VerticalAlignment="Center"/>
                        <TextBox x:Name="TbLeftHwnd" Width="120" Margin="6,0,6,0"/>
                        <Button x:Name="BtnPickLeft" Content="拾取句柄" Width="80" Click="BtnPickLeft_OnClick"/>
                        <Button x:Name="BtnEmbedLeftHwnd" Content="嵌入左窗口" Width="100" Margin="6,0,0,0" Click="BtnEmbedLeftHwnd_OnClick"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                        <TextBlock Text="右HWND:" VerticalAlignment="Center"/>
                        <TextBox x:Name="TbRightHwnd" Width="120" Margin="6,0,6,0"/>
                        <Button x:Name="BtnPickRight" Content="拾取句柄" Width="80" Click="BtnPickRight_OnClick"/>
                        <Button x:Name="BtnEmbedRightHwnd" Content="嵌入右窗口" Width="100" Margin="6,0,0,0" Click="BtnEmbedRightHwnd_OnClick"/>
                    </StackPanel>

                </StackPanel>
            </StackPanel>
            <!-- 下方镜像区（左） -->
            <wfi:WindowsFormsHost Grid.Row="1" x:Name="HostLeft">
                <wf:Panel x:Name="PanelLeft"/>
            </wfi:WindowsFormsHost>
        </Grid>

        <!-- 右侧：上方两个大按钮控制点击；下方嵌入区内放置可拖拽圆片（圆片为 WinForms 控件叠放在 PanelRight 上） -->
        <Grid Grid.Column="1" Margin="4,8,8,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                <Button x:Name="BtnMicAction" Content="点击1" Width="220" Height="96" FontSize="20" FontWeight="Bold" Click="BtnMicAction_OnClick"/>
                <Button x:Name="BtnSendAction" Content="点击2" Width="220" Height="96" FontSize="20" FontWeight="Bold" Margin="12,0,0,0" Click="BtnSendAction_OnClick"/>
            </StackPanel>

            <wfi:WindowsFormsHost Grid.Row="1" x:Name="HostRight">
                <wf:Panel x:Name="PanelRight"/>
            </wfi:WindowsFormsHost>
        </Grid>
    </Grid>
</Window>


